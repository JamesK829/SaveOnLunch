@model James.ViewModels.vRegisterVM
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@using (Html.BeginForm("Register", "Acc", FormMethod.Post))
{
    @Html.AntiForgeryToken()


<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <form action="#">
                <div class="row" style="text-align: left; justify-content: center;">
                    <div class="col-lg-8 col-md-6">

                        <div class="row">



                            <div class="col-lg-12">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control", @id = "Account", @placeholder = "Account" } })
                                    @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="checkout__input">
                                    <p>Password<span>*</span></p>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @id = "Password", @placeholder = "Password" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="checkout__input">
                                    <p>Confirm Password<span>*</span></p>
                                    @Html.EditorFor(model => model.ConfirmPwd, new { htmlAttributes = new { @class = "form-control", @id = " ConfirmPwd", @placeholder = "Password" } })
                                    @Html.ValidationMessageFor(model => model.ConfirmPwd, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group mt-3 col-lg-12" style="justify-content: center; margin-top: 3%;">
                                <button type="submit" class="site-btn" style="margin-bottom: 3%;">Sign Up</button>
                            </div>


                        </div>

                    </div>
            </form>
        </div>
    </div>
</section>
}


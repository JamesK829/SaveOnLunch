@model James.ViewModels.vLoginVM

@using (Html.BeginForm(
                       "login",
                       "Acc",
                       FormMethod.Post
                    ))
{

    @Html.AntiForgeryToken()

    <section class="checkout spad">
        <div class="container">
            <div class="checkout__form">
                <form action="#">
                    <div class="row" style="text-align: left; justify-content: center;">
                        <div class="col-lg-8 col-md-6">

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="checkout__input">
                                        <p>Email<span>*</span></p>
                                        @Html.EditorFor(modelItem => modelItem.Account, new { htmlAttributes = new { @class = "form-control", @id = "account", @placeholder = "Account" } })
                                        @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="checkout__input">
                                        <p>Password<span>*</span></p>
                                        @Html.EditorFor(modelItem => modelItem.Password, new { htmlAttributes = new { @class = "form-control", @id = "account", @placeholder = "Password" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>



                                <div class="form-group mt-3 col-lg-12" style="justify-content: center; margin-top: 3%;">
                                    <button type="submit" class="site-btn" style="margin-bottom: 3%;">Log In</button>
                                </div>


                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
}